@model AgencyTemplate.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<!-- Services -->
<section class="page-section" id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Services</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row text-center">
            @foreach (var service in Model.Services)
            {
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <i class="fas fa-@service.Icon fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">@service.Name</h4>
                    <p class="text-muted">@service.Description</p>
                </div>
            }

        </div>
    </div>
</section>

<!-- Portfolio Grid -->
<section class="bg-light page-section" id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Portfolio</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">

            @foreach (var portfolio in Model.Portfolios)
            {
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal-@portfolio.Id">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Public/img/portfolio/@portfolio.Photo" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>@portfolio.Client</h4>
                        <p class="text-muted">@portfolio.Category.Name</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<!-- About -->
<section class="page-section" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">About</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    @for (int i = 0; i < Model.Abouts.Count; i++)
                    {
                        <li class=@(i % 2 == 0 ? null : "timeline-inverted")>
                            <div class="timeline-image">
                                <img class="rounded-circle img-fluid" src="~/Public/img/about/@Model.Abouts[i].Photo" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>@(Model.Abouts[i].EndDate == null ? Model.Abouts[i].StartDate.ToString("MMMM yyyy") : (Model.Abouts[i].StartDate.ToString("yyyy"))+"-"+(Model.Abouts[i].EndDate?.ToString("yyyy")) )</h4>
                                    <h4 class="subheading">@Model.Abouts[i].Title</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">@Model.Abouts[i].Description</p>
                                </div>
                            </div>
                        </li>
                    }

                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4>
                                Be Part
                                <br>Of Our
                                <br>Story!
                            </h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

